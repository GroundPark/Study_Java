import java.io.*;
import java.util.*;
public class standardIO6 {
	static int totalFiles = 0;
	static int totalDirs = 0;
	
	public static void main(String[] args) {
		// TODO 지정 디렉토리에 포함된 파일, 디렉토리 목록을 전부 출력하는 예제
		//
		
		if(args.length != -1) {
			System.out.println(" 사용법 : java standardIO6 경로");
			System.exit(0);
		}
		
		File dir = new File(args[0]);
		
		if(!dir.exists() || !dir.isDirectory() ) {
			System.out.println(" 유효하지않은 디렉토리 ");
			System.exit(0);
		}
		
		
	}

}
